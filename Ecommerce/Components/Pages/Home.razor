    private DotNetObjectReference<Home>? _dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _dotNetRef = DotNetObjectReference.Create(this);
            await JSRuntime.InvokeVoidAsync("registerScrollListener", _dotNetRef);
        }
    }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("scrollToTop");
    }

    private bool initialized = false;

    [JSInvokable]
    public void OnScrollChanged(double scrollY)
    {
        bool shouldShow = scrollY > 100;
        if (shouldShow != showScrollTopButton)
        {
            showScrollTopButton = shouldShow;
            initialized = true;
            StateHasChanged();
        }
    }

    public async ValueTask DisposeAsync()
    {
        await JSRuntime.InvokeVoidAsync("unregisterScrollListener");
        _dotNetRef?.Dispose();
    }

    private void ToggleSearchOverlay()
    {
        isSearchOverlayVisible = !isSearchOverlayVisible;
        if (!isSearchOverlayVisible)
        {
            searchOverlayTerm = string.Empty;
            searchOverlayResults.Clear();
            searchAttempted = false;
        }
    }

    private void HandleSearchOverlayKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            ExecuteSearchOverlay();
        }
        else if (e.Key == "Escape")
        {
            ToggleSearchOverlay();
        }
    }

    private void ExecuteSearchOverlay()
    {
        searchAttempted = true;
        if (string.IsNullOrWhiteSpace(searchOverlayTerm))
        {
            searchOverlayResults.Clear();
            return;
        }

        // Simulasi pencarian
        var allProducts = new List<ProductViewModel> {
            new ProductViewModel { Id = 101, Name = "Kaos Polos Premium", Description = "Bahan katun combed 30s, nyaman dipakai." },
            new ProductViewModel { Id = 102, Name = "Payung Golf Otomatis", Description = "Diameter besar, rangka kuat, anti angin." },
            new ProductViewModel { Id = 103, Name = "Mug Custom Foto", Description = "Cetak foto kenangan Anda di mug berkualitas." },
            new ProductViewModel { Id = 104, Name = "Topi Baseball Bordir", Description = "Bordir logo atau tulisan custom." },
            new ProductViewModel { Id = 105, Name = "Jaket Hoodie Zipper", Description = "Bahan fleece tebal, hangat dan stylish." }
        };

        searchOverlayResults = allProducts
            .Where(p => p.Name.Contains(searchOverlayTerm, StringComparison.OrdinalIgnoreCase) ||
                        p.Description.Contains(searchOverlayTerm, StringComparison.OrdinalIgnoreCase))
            .ToList();
        Console.WriteLine($"Searching for: {searchOverlayTerm}, Found: {searchOverlayResults.Count}");
    }

